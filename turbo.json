{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["tsconfig.base.json"],
    "tasks": {
        "dev": {
            "dependsOn": ["^build"],
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": [
                ".svelte-kit/**",
                "!.svelte-kit/types/**",
                "dist/**",
                "build/**",
                ".wrangler/**"
            ],
            "cache": true
        },
        "lint": {
            "cache": true,
            "outputs": []
        },
        "test": {
            "dependsOn": ["build"],
            "cache": true,
            "outputs": ["coverage/**"]
        },
        "deploy": {
            "dependsOn": ["build", "test"],
            "cache": false
        }
    }
}
